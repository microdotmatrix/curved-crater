---
import { Image } from "astro:assets";

const { name, title, image } = Astro.props;
---

<header class="flex items-center bg-secondary">
  <figure class="flex-none w-32 lg:w-40">
    <Image
      src={image}
      alt={name}
      height="123"
      width="123"
      class="size-full object-cover"
    />
  </figure>
  <div class="flex-1 space-y-2 px-8">
    <h4>{name}</h4>
    <p class="text-sm">{title}</p>
  </div>
</header>
<div class="flex flex-col space-y-4 [&>p]:text-base">
  <slot />
</div>
